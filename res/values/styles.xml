<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
    </style>
    
    
        <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>



    <style name="youguu_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:background">@android:color/holo_blue_bright</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_down_out</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="HorizontalActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/push_out_right</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_stay_orig</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_stay_orig</item>
    </style>

    <style name="ActivityTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/HorizontalActivityAnimation</item>
    </style>

    <style name="EditActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/chat_in_from_bottom</item>
        <item name="android:activityCloseExitAnimation">@anim/chat_out_to_bottom</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_stay_orig</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_stay_orig</item>
    </style>

    <style name="ZoomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/zoom_in</item>
        <item name="android:activityCloseExitAnimation">@anim/zoom_out</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_stay_orig</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_stay_orig</item>
    </style>

    <style name="EditActivityTheme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/EditActivityAnimation</item>
    </style>

    <style name="ZoomActivityTheme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/ZoomActivityAnimation</item>
    </style>



</resources>
